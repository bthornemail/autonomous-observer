{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run ULP MCP Server",
      "program": "${workspaceFolder}/UniversalLifeProtocol/mcp-integration/ulp-mcp-server.js",
      "cwd": "${workspaceFolder}/UniversalLifeProtocol",
      "runtimeArgs": ["--experimental-modules"],
      "env": {
        "REMOTE_MCP_URL": "ws://localhost:3000"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Agent Hub",
      "program": "${workspaceFolder}/UniversalLifeProtocol/mcp-integration/agent-hub.js",
      "cwd": "${workspaceFolder}/UniversalLifeProtocol",
      "env": {
        "PORT": "8081"
      },
      "console": "integratedTerminal"
    }
  ]
}
