{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"types": ["vite/client", "react", "react-dom"],
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.ts"],
	"exclude": ["src/services/**"]
}