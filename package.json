{
  "name": "@universal-life-protocol/monorepo",
  "version": "3.0.0",
  "description": "Universal Life Protocol - Complete autonomous tetrahedron framework with MCP integration",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "autonomous-observer",
    "sacred-geometry-harmony",
    "mcp-integration"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
  "test": "node scripts/cqe-vsa-smoke.js",
  "test:jest": "jest",
  "test:setup": "npm i -D jest babel-jest @babel/core @babel/preset-env",
  "harmonic:demo": "npx --workspace @ulp/harmonic-template-engine harmonic-template --dim=256 --seed=demo --base=5 --harmonics=1,2,3 --gain=0.25 --placeholders=k:5:0.9,range:20..40:0.3 --out ./dist/harmonic-demo.json",
  "portal:serve": "node scripts/serve-portal.js",
  "harmonic:vsa": "node scripts/harmonic-vsa-demo.js",
    "start:tetrahedron": "./start-tetrahedron.sh",
    "start:bridge": "npm run start:bridge -w @ulp/web2-web3-bridge",
    "start:studio": "npm run dev -w ulp-studio",
    "start:marketplace": "npm run dev -w knowledge-marketplace",
    "start:universe": "npm run dev -w autonomous-universe",
    "install:all": "npm install && npm install --workspaces",
  "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules",
  "repo:inspect": "node bin/repo-clean.js inspect",
  "repo:clean": "node bin/repo-clean.js clean",
  "repo:deepclean": "node bin/repo-clean.js deepclean",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "lerna": "^8.0.0",
    "typescript": "^5.3.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "universal-life-protocol",
    "monorepo",
    "tetrahedron",
    "autonomous",
    "mcp",
    "web3",
    "sacred-geometry",
    "conscious-ai"
  ],
  "license": "MIT"
}
