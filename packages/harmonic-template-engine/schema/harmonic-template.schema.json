{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Harmonic Template Config",
  "type": "object",
  "required": ["dim"],
  "properties": {
    "dim": { "type": "integer", "minimum": 1 },
    "seed": { "type": ["string", "number"] },
    "baseFreq": { "type": "number", "minimum": 0 },
    "harmonics": { "type": "array", "items": { "type": "integer", "minimum": 1 } },
    "gain": { "type": "number" },
    "placeholders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "k": { "type": "integer" },
          "range": {
            "type": "object",
            "properties": {
              "start": { "type": "integer", "minimum": 0 },
              "end": { "type": "integer", "minimum": 0 }
            },
            "required": ["start", "end"]
          },
          "amplitude": { "type": "number" },
          "keepPhase": { "type": "boolean" }
        },
        "anyOf": [ {"required": ["k"]}, {"required": ["range"]} ]
      }
    }
  }
}
